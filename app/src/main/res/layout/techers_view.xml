<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Jean-Luc Beuchat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/lblTeacher"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblTeacher"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:text="IT Security"
        android:id="@+id/ITS"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/lblTeacher"
        android:layout_below="@id/lblTeacher"
        android:layout_marginTop="30dp"
        android:src="@mipmap/shit_foreground"
        android:layout_marginRight="-35dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ITS"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:text="Maths"
        android:id="@+id/Maths"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/lblTeacher"
        android:layout_below="@id/ITS"
        android:layout_marginTop="30dp"
        android:src="@mipmap/shit_foreground"
        android:layout_marginRight="-35dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Maths"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:text="BPM"
        android:id="@+id/BPM"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/lblTeacher"
        android:layout_below="@id/Maths"
        android:layout_marginTop="30dp"
        android:src="@mipmap/happy_foreground"
        android:layout_marginRight="-35dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BPM"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:text="POO"
        android:id="@+id/POO"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/lblTeacher"
        android:layout_below="@id/BPM"
        android:layout_marginTop="30dp"
        android:src="@mipmap/shit_foreground"
        android:layout_marginRight="-35dp"
        />

</RelativeLayout>