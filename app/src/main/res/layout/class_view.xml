<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="BPM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/lblClass"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblClass"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:text="95%"
        android:id="@+id/percent1"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/lblClass"
        android:layout_below="@id/lblClass"
        android:layout_marginTop="30dp"
        android:src="@mipmap/happy_foreground"
        android:layout_marginRight="-35dp"
        android:id="@+id/img1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percent1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:text="5%"
        android:id="@+id/percent2"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/lblClass"
        android:layout_below="@id/percent1"
        android:layout_marginTop="30dp"
        android:src="@mipmap/shit_foreground"
        android:layout_marginRight="-35dp"
        android:id="@+id/img2"
        />

</RelativeLayout>